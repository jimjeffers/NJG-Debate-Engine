<h1>New category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'category_form', :locals => {:f => f} %>
  <fieldset>
    <legend>Create New Category</legend>
    <ul class="form">
      <li>
        <%= f.submit 'Create Category' %>
      </li>
    </ul>
  </fieldset>
<% end %>

<%= link_to 'Back', categories_path %>