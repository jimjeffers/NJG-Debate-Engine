<h1>Listing Users</h1>

<table>
  <tr>
    <th class="user_name">Name</th>
    <th class="actions"></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class="user_name"><%= user.name %></td>
    <td class="action edit"><%= link_to 'Edit', edit_user_path(user) %></td>
    <td class="action destroy"><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

