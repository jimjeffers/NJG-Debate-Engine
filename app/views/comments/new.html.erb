<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'comment_form', :locals => {:f => f} %>

  <fieldset>
    <legend>Save Comment</legend>
    <ul class="form">
      <li>
        <%= f.submit 'Create Comment' %>
      </li>
    </ul>
  </fieldset>
<% end %>

<%= link_to 'Back', comments_path %>