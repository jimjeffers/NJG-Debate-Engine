<h1>Editing guide</h1>

<% form_for(@guide) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'products/product_form', :locals => {:f => f} %>
  <fieldset>
    <legend>Update Guide</legend>
    <ul class="form">
      <li><%= f.submit 'Update' %></li>
    </ul>
  </fieldset>
<% end %>

<%= error_messages_for :image %>

<% form_for(:image, 
            :url => [@guide,@image], 
            :method => :post, 
            :html => { :multipart => true }) do |f| -%>
  <fieldset>
    <legend>Attach a Cover Image</legend>
    <ul class="form">
      <li>
        <%= f.label :uploaded_data, "Uploaded Data" %>
        <%= f.file_field :uploaded_data %>
      </li>
      <li>
        <%= submit_tag 'Attach Cover Image' %>
      </li>
    </ul>
  </fieldset>
<% end -%>

<%= link_to 'Show', @guide %> |
<%= link_to 'Back', guides_path %>