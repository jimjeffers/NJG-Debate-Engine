<h1>Listing guides</h1>

<table>
  <tr>
    <th class="product_title">Title</th>
    <th class="product_price">Price</th>
    <th class="product_status">Status</th>
    <th class="product_actions" colspan="3">Actions</th>
  </tr>

<% @guides.each do |guide| %>
  <tr>
    <td class="product_title"><%= guide.name %></td>
    <td class="product_price"><%= guide.price %></td>
    <td class="product_status"><%= guide.aasm_state %></td>
    <td class="action show"><%= link_to 'Show', guide %></td>
    <td class="action edit"><%= link_to 'Edit', edit_guide_path(guide) %></td>
    <td class="action destroy"><%= link_to 'Destroy', guide, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New guide', new_guide_path %>